#!/usr/bin/env bash
#Title         :sparky
#Description   :Script to perform maintenance on your sparky installation
#Author        :JR Bing
#==============================================================================

###############################
# Source the function libraries
###############################

BASEDIR=$(dirname $0)
source $BASEDIR/../lib/libutil.sh
source $BASEDIR/../lib/libsparky.sh

#############################
# Parse the command arguments
#############################

case $1 in

  (help)
    printHelp
  ;;

  (update)
    updateSparky
  ;;

  (version)
    printSparkyVersion
  ;;

  (*)
    printHelp
  ;;


esac
