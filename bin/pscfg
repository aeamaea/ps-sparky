#!/usr/bin/env bash
#Title         :pscfg
#Description   :Utility script for modifying PeopleSoft Configuration files
#Author        :JR Bing
#==============================================================================

###############################
# Source the function libraries
###############################

BASEDIR=$(dirname $0)
source $BASEDIR/../lib/libutil.sh
source $BASEDIR/../lib/libpscfg.sh

#############################
# Parse the command arguments
#############################

case $1 in

  (help)
    printHelp
  ;;

  (version)
    printVersion
  ;;

  (list)
    listEnvironments
  ;;

  (show)
    showPsftVars
  ;;

  (create)
    createEnvironment $2
  ;;

  (edit)
    # Edit environment configuration file
    editEnvironment $2
  ;;

  (delete)
    # Delete environment configuration file
    deleteEnvironment $2
  ;;

  (copy)
    # Delete environment configuration file
    copyEnvironment $2 $3
  ;;

  (toggle)
    # Toggle configuration settings
  ;;

  (doctor)
    # Validate current environment settings
    runHealthCheck
  ;;

  (*)
    printHelp
  ;;

esac
